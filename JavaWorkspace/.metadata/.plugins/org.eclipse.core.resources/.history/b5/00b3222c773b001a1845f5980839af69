package com.app.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.app.dao.IPackageDao;
import com.app.pojos.City;
import com.app.pojos.Packages;
@CrossOrigin("*")
@RestController
@RequestMapping("/planner")
public class PackageController {
	@Autowired
	private IPackageDao dao;
	
	
@PutMapping("/package")
public Packages addNewPackages(@RequestBody Packages p1,@RequestParam int cityId)
{
	System.out.println("in package controller "+ p1);
	
	return (Packages)dao.addNewPackage(p1,cityId);
//	return null;
}
@GetMapping("/showpackage")
public List<Packages> showPackage()
{
	return dao.showPackages();
}
}

